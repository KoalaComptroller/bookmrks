<% if logged_in? %>
	<%= form_for(Bookmark.new, url: bookmarks_path) do |f| %>
		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :url %>
			<%= f.text_field :url, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "Select Folder" %>
			<%= f.select(:folder_id, current_user.folders.all.collect {|a| [a.name, a.id]}) %>
		</div>

		<%= f.submit "Add Bookmark", class: "btn btn-primary" %>
	<% end %>
<% end %>