<div class="row">
<div class="col-sm-4">
	<% if @user.folders.any? %>
		<ol class="folders list-group">
			<%= render @folders %>
		</ol>
	<% end %>
	<button type="button" class="btn btn-primary" id="new-folder-button" data-toggle="modal" data-target="#new-folder-modal">Add Folder</button>
</div>

<div class="col-sm-8">
	<% if @user.bookmarks.any? %>
		<h4>Bookmarks (<%= @user.bookmarks.count %>)</h4>
		<ul class="bookmarks">
			<%= render @bookmarks %>
		</ul>
		<%= will_paginate @bookmarks %>
	<% end %>
</div>
</div>

<div id="new-folder-modal" class="modal fade" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">X</button>
				<h4 class="modal-title">Add New Folder</h4>
			</div>

			<div class="modal-body">
				<%= render 'shared/folder_form' %>
			</div>
		</div>
	</div>
</div>